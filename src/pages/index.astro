---
import Layout from "../layouts/Layout.astro";
import Bange from "../components/Bange.astro";
import Location from "../components/icons/Location.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Title from "../components/Title.astro";
import ExperienceCard from "../components/ExperienceCard.astro";
import Gmail from "../components/icons/Gmail.astro";
import Project from "../components/Project.astro";
import Skills from "../components/Skills.astro";

const startYear = 2023;
const currentYear = new Date().getFullYear();
const yearsCount = currentYear - startYear;
---

<Layout
  title="Luis Duran's Portfolio - Software Developer & Web Developer"
>
  <main class="flex flex-col gap-9 items-center px-6 md:px-32 sm:py-28 py-20 xl:mx-20 xl:py-52" id="home">
    <section class="flex flex-col-reverse xl:flex-row xl:flex-wrap justify-center lg:w-[820px]"
    >
      <div class="xl:w-2/3 mt-3">
        <h1
          class="text-5xl lg:text-6xl text-center md:text-left font-bold text-balance"
        >
          Hi, I'm Luis Duran
        </h1>
        <h2 class="text-lg lg:text-xl text-center md:text-start py-8 lg:pr-9 opacity-80">
          Graduated in <span class="text-[#E74C3C]"
            >Computer Systems Engineering</span
          >, deeply interested in <span class="text-[#E74C3C]"> Software Development</span> with  <span
            class="text-[#E74C3C]"> { yearsCount }+ years of experience</span
          >. Iâ€™m constantly looking to expand my knowledge of new technologies and best practices in the field.
        </h2>
        <div
          class="flex flex-wrap-reverse justify-center md:flex-row md:justify-start"
        >
          <Location class="w-4 md:w-5 md:h-6 md:mb-1 stroke-black dark:stroke-white transition-colors duration-500" />
          <span class="self-center text-base md:text-lg px-2 md:px-3"
            >Mexico City, Mexico</span
          >
          <a  href="https://www.linkedin.com/in/luis-duran-r" target="_blank"
            class="flex justify-center w-full md:w-auto mb-4 md:mb-0 md:pl-5 lg:pl-10 md:self-center"
            ><Bange>Available for freelance work</Bange></a
          >
        </div>
        <div class="flex gap-7 pt-6 justify-center md:justify-start">
          <a href="https://github.com/THB-L85" target="_blank" class="hover:scale-110 transition-transform duration-300 opacity-75 hover:opacity-100 hover:rotate-12"
            ><Github class="w-10 h-10 dark:fill-white"/></a
          >
          <a href="https://www.linkedin.com/in/luis-duran-r" target="_blank" class="hover:scale-110 transition-transform duration-300 opacity-75 hover:opacity-100 hover:-rotate-12"
            ><Linkedin class="w-10 h-10 dark:fill-white"/></a
          >
          <a href="mailto:luis.dr85a@gmai.com" target="_blank" class="hover:scale-110 transition-transform duration-300 opacity-75 hover:opacity-100 hover:rotate-12"
            > <Gmail class="w-14 h-14 -mt-2 dark:fill-white"/>  </a
          >
        </div>
      </div>
      <div class="flex justify-center">
        <img
          src="./foto-profile-2.jpg"
          alt="foto"
          class="rounded-full size-40 my-2 lg:mt-2 md:w-40 md:h-40 lg:size-56 object-cover hover:scale-110 transition duration-300 shadow-2xl"
        />
      </div>
    </section>
    <section class="flex flex-col w-full lg:w-[820px]" id="skills">
      <div class="flex justify-center mb-10">
        <Title>Skills</Title>
      </div>
      <div class="flex-wrap inline-flex md:content-start justify-center">
        <Skills />
      </div>
    </section>
    <section class="flex flex-col w-full lg:w-[820px]" id="experience">
      <div class="flex justify-center mb-10">
        <Title>Experience</Title>
      </div>
      <div class="">
        <ExperienceCard />
      </div>
    </section>
    <section class="flex flex-col w-full lg:w-[820px]" id="projects">
      <div class="flex justify-center mb-10">
        <Title>Projects</Title>
      </div>
      <div class="mx-4 text-base lg:text-lg">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-1">
          <Project linkProject="https://coffee-blog-dev.netlify.app/" linkGithub="https://github.com/THB-L85/coffee_blog" imageProject="./coffee_blog.png" titleProject="Coffee Blog" badges={["HTML","CSS"]}>This is a Coffee Blog for Coffee Lovers & Devs.</Project>
        </div>
      </div>
    </section>
    <section class="flex flex-col w-full lg:w-[820px]" id="about_me" >
      <div class="flex justify-center mb-10">
        <Title>About</Title>
      </div>
      <div class="text-lg opacity-80">
        <span class="md:text-xl">
          I'm a passionate software developer who values teamwork, continuous learning, and writing clean, maintainable code.
          I enjoy collaborating on meaningful projects and take pride in building scalable and reliable web applications using tools like Laravel, JavaScript, and .NET.
          I'm always open to new challenges that allow me to grow professionally and contribute value to every project I join.
        </span>
      </div>
    </section>
  </main>
</Layout>
