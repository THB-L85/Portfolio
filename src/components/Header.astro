import Home from "./icons/Home.astro";
---
<header class="flex fixed top-0 z-10 w-full mx-auto justify-center items-center text-sm lg:text-lg py-3 md:py-7">
    <nav class="flex flex-row gap-x-1 rounded-full p-2 md:p-1.5 mx-3 md:px-5 backdrop-blur-md transition-colors duration-300" id="navbar">
        <a href="#home" class="nav-link hover:text-[#F39C12] hover:bg-[white]/10 px-3 py-2 md:py-2 rounded-full self-center"> <Home class="w-auto h-6" /> </a>
        <a href="#skills" class="nav-link hover:text-[#F39C12] hover:bg-[white]/10 px-3 py-2 md:py-2 rounded-full self-center">Skills</a>
        <a href="#experience" class="nav-link hover:text-[#F39C12] hover:bg-[white]/10 px-3 py-2 md:py-2 rounded-full self-center">Experience</a>
        <a href="#projects" class="nav-link hover:text-[#F39C12] hover:bg-[white]/10 px-3 py-2 md:py-2 rounded-full self-center">Projects</a>
        <a href="#about_me" class="nav-link hover:text-[#F39C12] hover:bg-[white]/10 px-3 py-2 md:py-2 rounded-full self-center">About</a>
